<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Wine experiences" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Wine experiences</h1>
    <%= link_to "New wine experience", new_wine_experience_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="wine_experiences" class="min-w-full">
    <% @wine_experiences.each do |wine_experience| %>
      <%= render wine_experience %>
      <p>
        <%= link_to "Show this wine experience", wine_experience, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
